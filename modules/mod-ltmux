# prepare user's configuration on workstation to transfer
if [ -z "$CLE_WS" ]; then
	cp $HOME/.tmux.conf $CLE_D/tmuxcf 2>/dev/null && CLE_XFILES="$CLE_XFILES tmuxcf"
fi

## `ltmux`     - live tmux session
ltmux () (
	
	CLE_TMUX=$CLE_D/tmuxcf-cle
	cat <<-EOT >$CLE_TMUX
		# source all possible configurations
		source-file -q /etc/tmux.conf
		source-file -q $CLE_DR/tmuxcf${CLE_WS:+-$CLE_WS}
		source-file -q $HOME/.tmux.conf
		# set the command that will be run on creating new window or pane
		set -g default-command $CLE_RC
	EOT
	tmux -f $CLE_TMUX "$@"
)

# Register ltmux for transfer to remote session
CLE_XFUN="$CLE_XFUN ltmux"

